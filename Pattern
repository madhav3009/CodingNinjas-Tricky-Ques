If Input N = 5
   output 123454321
          1234**4321
          123****321
          12******21
          1********1

#include<iostream>
using namespace std;

int main()
{
  int n;
  cin>>n;
  int i,j,k;
  for(i=n;i>=1;i--)
  {
    for(j=1;j<=n;j++)
    {
      if(j<=i)
        cout<<j;
      else
        cout<<'*';
    }
    for(j=n;j>=1;j--)
    {
      if(j<=i)
        cout<<j;
      else
        cout<<'*';
      
    } 
    cout<<endl;
  }
  return 0;
}
